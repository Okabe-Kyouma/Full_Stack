<% layout('layout/boilerplate.ejs') %>

<div class="row">
    <div class="col-lg-6 d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
            <img src="<%=product.image%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=product.name%></h5>
              <h5 class="card-title"><%=product.price%></h5>
              <p class="card-text"><%=product.desc%></p>
              <a href="/products/<%=product._id%>" class="btn btn-primary">SHOW</a>
              <a href="/product/<%=product._id %>/edit" class="btn btn-warning">Edit</a>
              <a href="/product/<%=product._id %>/delete" class="btn btn-danger">Delete</a>
            </div>
          </div>
    </div>
    <div class="col-lg-6">
        <h1>ALL reviews</h1>
        <form action="/products/<%=product._id%>/review" method="post">
          <input type="range" min="0" max="5" name="rating"><br>
          <textarea cols="30" rows="3" name="comment"></textarea>
          <br>
          <button class="btn btn-primary">Submit</button>
        </form>
        <%for(let review of product.reviews){%>
            <div class="card">
              <p class="card-title">
                
              </p>
            </div>
       <% } %>
    </div>
</div>