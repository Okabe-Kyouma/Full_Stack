<body>
    <form action="/product/new" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Product Name</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Product Price</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="price">
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Product Rating</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="rating">
          </div>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Product Image</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="image">
